{
  "manifest_version": 3,
  "name": "granblue.team",
  "version": "2.1",
  "description": "Passively captures Granblue Fantasy data for export to granblue.team",
  "permissions": [
    "storage",
    "debugger",
    "tabs",
    "sidePanel"
  ],
  "key": "{{UNIQUE_KEY}}",
  "host_permissions": [
    "https://game.granbluefantasy.jp/*",
    "https://api.granblue.team/*",
    "https://next-api.granblue.team/*"
  ],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": []
}
